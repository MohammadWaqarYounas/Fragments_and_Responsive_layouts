<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#FFFFFF">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="150dp"
        android:layout_weight="1"
        android:text="Hello"
        android:layout_marginLeft="20dp"
        android:textAlignment="textStart"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#222F7C"
        android:id="@+id/hello"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#575454"
        android:layout_marginLeft="20dp"
        android:text="Login first to continue"
        android:textAlignment="textStart"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/rounded_corner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="CNIC"
            android:textColor="@color/black"
            android:paddingTop="1dp"
            android:paddingLeft="5dp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/check_circle"
            android:hint="123-456-7890"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"

            />
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:drawableEnd="@drawable/eye"
        android:drawableTint="#D8D6D6"
        android:hint="Write Password"
        android:textSize="15dp"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#575454"
        android:paddingTop="10dp"
        android:text="Forgot Password?"
        android:textAlignment="textEnd"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="30dp"
        android:text="Login"
        android:textStyle="bold"
        android:background="@drawable/home_bar_corners"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#575454"
            android:text="Don't have an account? "
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:id="@+id/text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SignUp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/text"
            android:textColor="#222F7C"
            />
    </RelativeLayout>


</LinearLayout>
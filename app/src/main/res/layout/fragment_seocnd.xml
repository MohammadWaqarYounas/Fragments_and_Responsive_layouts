<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="Welcome"
                android:textAlignment="textStart"
                android:textColor="#222F7C"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome"
                android:layout_marginLeft="20dp"
                android:paddingLeft="5dp"
                android:text="Home,Alex"
                android:textAlignment="textStart"
                android:textColor="#222F7C"
                android:textSize="23dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hello"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:text="Rooms"
                android:textAlignment="textStart"
                android:textColor="#222F7C"
                android:textSize="20dp"
                android:textStyle="bold" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginHorizontal="15dp"
                android:layout_below="@+id/room"
                android:id="@+id/roomlist">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:padding="10dp"
                            android:background="@drawable/second_corner_file"
                            android:src="@drawable/sofa" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:padding="10dp"
                            android:background="@drawable/second_corner_file"
                            android:src="@drawable/doublebed" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:padding="10dp"
                            android:background="@drawable/second_corner_file"

                            android:src="@drawable/kitchen" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:padding="10dp"
                            android:background="@drawable/second_corner_file"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bathtub" />
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:padding="10dp"
                            android:background="@drawable/second_corner_file"
                            android:src="@drawable/sofa" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:padding="10dp"
                            android:background="@drawable/second_corner_file"
                            android:src="@drawable/doublebed" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:padding="10dp"
                            android:background="@drawable/second_corner_file"

                            android:src="@drawable/kitchen" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:padding="10dp"
                            android:background="@drawable/second_corner_file"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bathtub" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:text="Living Room" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:text="Bedroom" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:text="Kitchen" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:text="Bathroom" />
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:text="Living Room" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:text="Bedroom" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:text="Kitchen" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:text="Bathroom" />

                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/smartsystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roomlist"
                android:layout_marginLeft="@dimen/_18sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:text="Smart systems"
                android:textAlignment="textStart"
                android:textColor="#222F7C"
                android:textSize="20sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_370sdp"
                android:weightSum="2"
                android:orientation="vertical"
                android:id="@+id/boxview"
                android:layout_below="@+id/smartsystem"
                android:layout_marginHorizontal="@dimen/_13sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_28sdp"
                                android:background="@drawable/thirdcorners"
                                tools:ignore="UseSwitchCompatOrMaterialXml">

                                <Switch
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:thumb="@drawable/switch_toggle_custom"
                                    tools:ignore="NotSibling" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:paddingLeft="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_30ssp"
                                    android:text="Smart TV"
                                    android:textColor="#35043E"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:paddingLeft="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_7ssp"
                                    android:text="2 Active devices"
                                    android:textColor="#35043E" />
                            </RelativeLayout>

                            <ImageView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:paddingLeft="@dimen/_3sdp"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/profile" />

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_28sdp"
                                android:background="@drawable/thirdcorners"
                                tools:ignore="UseSwitchCompatOrMaterialXml">

                                <Switch
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:thumb="@drawable/switch_toggle_custom"
                                    tools:ignore="NotSibling" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:paddingLeft="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_30ssp"
                                    android:text="Air Conditioner"
                                    android:textColor="#35043E"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:paddingLeft="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_7ssp"
                                    android:text="1 Active devices"
                                    android:textColor="#35043E" />
                            </RelativeLayout>

                            <ImageView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:paddingLeft="@dimen/_3sdp"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/profile" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_28sdp"
                                android:background="@drawable/thirdcorners"
                                tools:ignore="UseSwitchCompatOrMaterialXml">

                                <Switch
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:thumb="@drawable/switch_toggle_custom"
                                    tools:ignore="NotSibling" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:paddingLeft="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_30ssp"
                                    android:text="Audio System"
                                    android:textColor="#35043E"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:paddingLeft="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_7ssp"
                                    android:text="1 Active devices"
                                    android:textColor="#35043E" />
                            </RelativeLayout>

                            <ImageView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:paddingLeft="@dimen/_3sdp"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/profile" />

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_28sdp"
                                android:background="@drawable/thirdcorners"
                                tools:ignore="UseSwitchCompatOrMaterialXml">

                                <Switch
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:thumb="@drawable/switch_toggle_custom"
                                    tools:ignore="NotSibling" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:paddingLeft="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_30ssp"
                                    android:text="Heating System"
                                    android:textColor="#35043E"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:paddingLeft="@dimen/_7sdp"
                                    android:paddingBottom="@dimen/_7ssp"
                                    android:text="No Active devices"
                                    android:textColor="#35043E" />
                            </RelativeLayout>

                            <ImageView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:paddingLeft="@dimen/_3sdp"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/profile" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>